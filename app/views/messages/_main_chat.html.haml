.main
  .main__header
    .main__header__left
      %h2.main__header__left__top
        = @group.name
      %ul.main__header__left__bottom
        Memberï¼š
        - @group.users.each do |user|
          %li.main__header__left__bottom__list
            = user.name
    = link_to 'Edit', "/groups/#{@group.id}/edit", class: "main__header__right" 

  .main__contents
    = render @messages
    


  .main__footer
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'main__footer__input', placeholder: 'type a message'
      .main__footer__left
        = f.label :image, class: 'main__footer__left__box' do
          = icon('fas', 'image', class: 'main__footer__left__box__img')
          = f.file_field :image, class: 'main__footer__left__box__file'
      = f.submit 'Send', class: 'main__footer__btn'