.side
  .side__header
    .side__header__box
      %h3.side__header__box__name
        = current_user.name     
      %ul.side__header__box__menu
        %li.side__header__box__menu__list
          = link_to new_group_path do
            %i.fas.fa-edit
        %li.side__header__box__menu__list
          = link_to "/users/#{current_user.id}/edit" do
            %i.fa.fa-cog
  .side__below
    - current_user.groups.each do |group|
      .side__below__group
        = link_to group_messages_path(group), class: "side__below__group__link" do
          .side__below__group__names
            = group.name
          .side__below__group__messages
            メッセージはまだありません。



      
  
